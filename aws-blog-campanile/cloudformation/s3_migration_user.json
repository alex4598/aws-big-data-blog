{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Campanile IAM user for S3 bucket copy",

  "Parameters" : {
    "Bucket" : {
      "Description" : "S3 Bucket",
      "Type" : "String"
    },
    
    "Operation" : {
      "Description" : "Read or Write",
      "Type" : "String",
      "AllowedValues" : [ "Read", "Write" ]
    }
  },

  "Conditions" : {
    "Read" : { "Fn::Equals" : [ { "Ref" : "Operation" }, "Read" ] },
    "Write" : { "Fn::Equals" : [ { "Ref" : "Operation" }, "Write" ] }
  },

  "Resources" : {
    "User" : {
      "Type" : "AWS::IAM::User",
      "Properties" : {
        "Path" : "/"
      }
    },

    "AllPolicy" : {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "s3_all_policy",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect" : "Allow",
              "Action" : [
                "s3:List*",
                "s3:GetBucketLocation"
              ],
              "Resource" : [
                { "Fn::Join" : [ "", [ "arn:aws:s3:::", 
                    { "Ref" : "Bucket" } ] ] }
              ]
            }
          ]
        },
        "Users" : [
          { "Ref" : "User" }
        ]
      }
    },

    "ReadPolicy" : {
      "Type": "AWS::IAM::Policy",
      "Condition" : "Read",
      "Properties": {
        "PolicyName": "s3_read_policy",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect" : "Allow",
              "Action" : [
                "s3:Get*"
              ],
              "Resource" : [
                { "Fn::Join" : [ "", [ "arn:aws:s3:::", { "Ref" : "Bucket" }, 
                    "/*" ] ] }
              ]
            }
          ]
        },
        "Users" : [
          { "Ref" : "User" }
        ]
      }
    },

    "WritePolicy" : {
      "Type": "AWS::IAM::Policy",
      "Condition" : "Write",
      "Properties": {
        "PolicyName": "s3_write_policy",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect" : "Allow",
              "Action" : [
                "s3:Put*"
              ],
              "Resource" : [
                { "Fn::Join" : [ "", [ "arn:aws:s3:::", { "Ref" : "Bucket" }, 
                    "/*" ] ] }
              ]
            }
          ]
        },
        "Users" : [
          { "Ref" : "User" }
        ]
      }
    }
  }, 

  "Outputs" : {
    "User" : {
      "Value" : { "Ref" : "User" }
    }
  }
}
